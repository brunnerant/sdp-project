<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_margin">

            <TextView
                android:id="@+id/field_preview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_title"
                android:textSize="@dimen/sub_title_text_size"
                android:textColor="@color/colorSubTitle"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/field_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:inputType="text"/>

            <TextView
                android:id="@+id/selectTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_field_type"
                android:textSize="@dimen/sub_title_text_size"
                android:textColor="@color/colorSubTitle"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/field_types_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/field_types_list"/>

            <CheckBox
                android:id="@+id/signCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_box_sign"
                android:textSize="@dimen/text_size"/>

            <CheckBox
                android:id="@+id/decimalCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_box_decimal"
                android:textSize="@dimen/text_size"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>